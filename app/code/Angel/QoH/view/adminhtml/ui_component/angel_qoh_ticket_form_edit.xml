<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">angel_qoh_ticket_form_edit.ticket_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">Ticket Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Angel\QoH\Block\Adminhtml\Ticket\Edit\BackButton" name="back"/>
            <!--<button class="Angel\QoH\Block\Adminhtml\Ticket\Edit\DeleteButton" name="delete"/>-->
            <button class="Angel\QoH\Block\Adminhtml\Ticket\Edit\PrintButton" name="print"/>
            <button class="Angel\QoH\Block\Adminhtml\Ticket\Edit\SaveButton" name="save"/>
            <button class="Angel\QoH\Block\Adminhtml\Ticket\Edit\SaveAndContinueButton" name="save_and_continue"/>
        </buttons>
        <namespace>angel_qoh_ticket_form_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>angel_qoh_ticket_form_edit.ticket_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="ticket_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Angel\QoH\Model\Ticket\DataProvider" name="ticket_form_data_source">
            <settings>
                <requestFieldName>ticket_id</requestFieldName>
                <primaryFieldName>ticket_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field formElement="select" name="product_id" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Queen of Hearts Product</label>
                <dataScope>product_id</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Angel\QoH\Model\Product\SelectProducts"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field formElement="input" name="customer_email" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer Email</label>
                <dataScope>customer_email</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field formElement="input" name="start" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Start</label>
                <dataScope>start</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field formElement="input" name="end" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">End</label>
                <dataScope>end</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>


        <field formElement="input" name="card_number" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Card Number</label>
                <dataScope>card_number</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field formElement="input" name="price" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                <item name="source" xsi:type="string">Ticket</item>
            </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ticket Price</label>
                <dataScope>price</dataScope>
                <disabled>true</disabled>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field formElement="select" name="status" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Ticket</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Angel\QoH\Model\Ticket\NewTicketStatus"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
